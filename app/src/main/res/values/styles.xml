<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ContentText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/cardview_dark_background</item>
    </style>

    <style name="ContentText.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HorizontalItemTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableRight">@drawable/ic_chevron_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/ContentText.Large</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
